<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-2">
    <%= link_to 'New Product', new_product_path, class: "btn btn-sm btn-outline-success" if admin_user? %>
  </div>
  <div class="col-10">
    <h1>Products</h1>
  </div>
</div>
<% @products.each do |product| %>
<div class="album py-2 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col">
          <div class="card shadow-sm">
            <%= image_tag(product.thumbnail.url, size: "100x225", class: "card-img-top") if product.thumbnail? %>
            <div class="card-body">
              <p class="card-text"><%= product.title %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to 'View', product, class: "btn btn-sm btn-outline-secondary" %> 
                  <%= link_to 'Edit', edit_product_path(product), 
                            class: "btn btn-sm btn-outline-success" if admin_user? %> 
                  <button type="button" class="btn btn-sm btn-outline-dark">Add to cart</button>
                </div>
                <small class="text-muted"><%= product.price %></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

